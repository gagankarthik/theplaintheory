{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/app/(dashboard)/buddy/page.jsx", "src/app/(dashboard)/habit/[id]/page.jsx", "src/components/WeekStrip.jsx", "src/components/CheckinToggle.jsx", "src/components/HabitHeader.jsx", "src/components/HabitProgress.jsx", "src/components/HabitStats.jsx", "src/components/HabitCalendar.jsx", "src/components/HabitActions.jsx", "src/app/page.jsx"],
  "exclude": ["node_modules"]
}
